{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "checkJs": false,
    "noEmit": true,
    "declaration": true,
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
